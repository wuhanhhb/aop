        <addr>http://27.17.43.146</addr>
        <port>58085</port>
    </configs>
    <!-- 映射配置选项 -->
    <classmapping>
        <map from="com.huaxin.common.login.LoginActivity"
            to="com.huaxin.common.login.UserActivity" />
